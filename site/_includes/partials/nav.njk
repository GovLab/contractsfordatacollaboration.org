{% if navigation.items %}
<nav class="navigation">
  <ul class="nav-list">
  {% for item in navigation.items %}
    {% set currentAttribute = '' %}

    {% if page.url == item.url %}
      {% set currentAttribute = 'aria-current="page"' %}
    {% endif %}

    <li class="nav-list-item">
      <a href="{{ item.url }}" {{ currentAttribute | safe }}>{{ item.text }}</a>
    </li>
  {% endfor %}
  </ul>
</nav>
{% endif %}
